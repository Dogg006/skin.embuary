<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<include>PropertyIncludes</include>
	<controls>
		<!-- OSD -->
		<control type="group">
			<animation effect="fade" start="0" end="100" time="0">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="400">WindowClose</animation>
			<!--Bottom-->
			<control type="group">
				<!-- mask -->
				<control type="image">
					<bottom>0</bottom>
					<width>100%</width>
					<height>180</height>
					<texture colordiffuse="black">views/player/mask_bottom.png</texture>
				</control>
				<!-- Wide -->
				<control type="group">
					<visible>true</visible>
					<control type="image">
						<bottom>20</bottom>
						<left>20</left>
						<width>268</width>
						<height>159</height>
						<texture>views/player/shadow_wide.png</texture>
					</control>
					<control type="image">
						<bottom>29</bottom>
						<left>29</left>
						<width>250</width>
						<height>141</height>
						<texture colordiffuse="thumb_background_fallback" diffuse="views/player/mask_wide.png">common/white.jpg</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>String.IsEmpty(Window.Property(thumb))</visible>
					</control>
					<control type="textbox">
						<bottom>39</bottom>
						<left>39</left>
						<width>230</width>
						<height>121</height>
						<font>Light24</font>
						<textcolor>white</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(tvshowtitle)]</label>
						<visible>String.IsEmpty(Window.Property(thumb))</visible>
					</control>
					<control type="image">
						<bottom>29</bottom>
						<left>29</left>
						<width>250</width>
						<height>141</height>
						<texture colordiffuse="$VAR[thumb_background_color]" diffuse="views/player/mask_wide.png">common/white.jpg</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(Window.Property(thumb))</visible>
					</control>
					<control type="image">
						<bottom>29</bottom>
						<left>29</left>
						<width>250</width>
						<height>141</height>
						<texture diffuse="views/player/mask_square.png">$INFO[Window.Property(thumb)]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>!String.IsEmpty(Window.Property(thumb))</visible>
					</control>
				</control>
				<!-- Label section -->
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<height>31</height>
					<bottom>135</bottom>
					<left>309</left>
					<right>30</right>
					<itemgap>0</itemgap>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<font>med28</font>
						<textcolor>white</textcolor>
						<label>[LIGHT]$LOCALIZE[31012]   [COLOR accent]$VAR[PlayerTimeRemaining][/COLOR][/LIGHT]</label>
					</control>
				</control>
				<!-- Details -->
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<height>31</height>
					<bottom>98</bottom>
					<left>309</left>
					<right>30</right>
					<itemgap>0</itemgap>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<font>reg24</font>
						<textcolor>white</textcolor>
						<label>$INFO[Window.Property(tvshowtitle),, - ]$INFO[Window.Property(season),S,:]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]   </label>
						<visible>!String.IsEmpty(Window.Property(title))</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<font>reg24</font>
						<textcolor>white</textcolor>
						<label>$INFO[Window.Property(year),,   ]</label>
						<visible>!String.IsEmpty(Window.Property(year))</visible>
					</control>
					<control type="label">
						<animation effect="slide" end="-2,2" time="0" condition="true">Conditional</animation>
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>î ¸</label>
						<font>Material26</font>
						<textcolor>red</textcolor>
						<visible>!String.IsEmpty(Window.Property(rating))</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(rating),,   ]</label>
						<font>reg24</font>
						<textcolor>white</textcolor>
						<visible>!String.IsEmpty(Window.Property(rating))</visible>
					</control>
				</control>
				<!-- Bottom label section -->
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<height>56</height>
					<bottom>27</bottom>
					<left>309</left>
					<right>20</right>
					<itemgap>5</itemgap>
					<control type="button" id="3012">
						<include>LightGreyButton</include>
						<label>$LOCALIZE[31010]</label>
					</control>
					<control type="button" id="3013">
						<include>LightGreyButton</include>
						<label>$LOCALIZE[15067]</label>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>