<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- video playlist -->
	<include name="VideoPlaylistLayout">
		<!-- Background -->
		<include>Background</include>
		<!-- Dialog -->
		<control type="grouplist" id="500">
			<include>Window_OpenClose</include>
			<width>100%</width>
			<height>100%</height>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<include>ScrollTime</include>
			<itemgap>-80</itemgap>
			<!-- Meta -->
			<control type="group">
				<top>128</top>
				<height>480</height>
				<!-- poster -->
				<include>MetaPoster</include>
				<!-- Meta -->
				<control type="group">
					<control type="grouplist">
						<left>370</left>
						<orientation>vertical</orientation>
						<align>top</align>
						<itemgap>0</itemgap>
						<width>1480</width>
						<control type="label">
							<width>1040</width>
							<height>55</height>
							<label>$INFO[ListItem.TVShowTitle,, - ]$VAR[ListItemSeasonEpisode]$INFO[ListItem.Title]</label>
							<font>Reg37</font>
							<aligny>top</aligny>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<control type="label">
							<width>1040</width>
							<height>55</height>
							<label>$LOCALIZE[31186]</label>
							<font>Reg37</font>
							<aligny>top</aligny>
							<visible>String.IsEmpty(ListItem.Title) + String.IsEqual(ListItem.Filename,stream) + String.Contains(ListItem.Filenameandpath,/emby/videos/)</visible>
						</control>
						<!-- meta -->
						<control type="group">
							<visible>!String.IsEqual(ListItem.DBType,episode)</visible>
							<height>40</height>
							<include>MetaMovieInfos</include>
						</control>
						<control type="group">
							<height>40</height>
							<visible>String.IsEqual(ListItem.DBType,episode)</visible>
							<include>MetaEpisodeInfos</include>
						</control>
						<!-- buttons -->
						<control type="grouplist" id="100">
							<height>70</height>
							<orientation>horizontal</orientation>
							<itemgap>5</itemgap>
							<onright>noop</onright>
							<onleft>900</onleft>
							<control type="button" id="8">
								<include>LightGreyButton</include>
								<label>$LOCALIZE[15067]</label>
								<onclick>close</onclick>
								<onup>SetFocus(6666)</onup>
								<ondown>SetFocus(50)</ondown>
							</control>
							<control type="button" id="21">
								<include>LightGreyButton</include>
								<label>$LOCALIZE[190]</label>
								<onup>SetFocus(6666)</onup>
								<ondown>SetFocus(50)</ondown>
							</control>
							<control type="button" id="22">
								<include>LightGreyButton</include>
								<label>$LOCALIZE[192]</label>
								<onclick>close</onclick>
								<onup>SetFocus(6666)</onup>
								<ondown>SetFocus(50)</ondown>
							</control>
							<control type="button" id="97">
								<visible>!String.IsEmpty(ListItem.Plot)</visible>
								<include>LightGreyButton</include>
								<width>70</width>
								<height>50</height>
								<font>material24</font>
								<label>î˜–</label>
								<onclick>RunScript(script.skin.helper.service,action=textviewer,header='$ESCVAR[TinyInfoDialogHeadline]',message='$ESCVAR[TinyInfoDialogPlot]')</onclick>
								<onup>SetFocus(6666)</onup>
								<ondown>SetFocus(50)</ondown>
							</control>
						</control>
						<!-- genre -->
						<include>MetaGenre</include>
						<!-- plot -->
						<control type="textbox">
							<width>100%</width>
							<height max="130">auto</height>
							<align>justify</align>
							<aligny>top</aligny>
							<label>$INFO[ListItem.Tagline,[B],[/B][CR]]$INFO[ListItem.Plot]</label>
							<font>Light24</font>
							<autoscroll>false</autoscroll>
							<visible>!String.IsEmpty(ListItem.Plot)</visible>
						</control>
						<control type="label">
							<height>20</height>
							<visible>!String.IsEmpty(ListItem.Plot)</visible>
						</control>
						<!-- flags -->
						<include content="MetaFlags">
							<param name="type" value="MediaFlags"/>
						</include>
					</control>
					<!-- logo -->
					<control type="image">
						<right>70</right>
						<width>400</width>
						<height>155</height>
						<texture>$VAR[ListItemClearlogo]</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</control>
			</control>
			<!-- Items -->
			<include content="WideWidget">
				<param name="id" value="50"/>
				<param name="headline" value="$LOCALIZE[10028]"/>
				<param name="onup" value="100"/>
				<param name="ondown" value="noop"/>
				<param name="use_custom_content" value="false"/>
			</include>
		</control>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">500</param>
		</include>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">500</param>
		</include>
	</include>
	<!-- music playlist -->
	<include name="MusicPlaylistLayout">
		<!-- background -->
		<include>Background</include>
		<!-- list -->
		<control type="group">
			<include>Window_OpenClose</include>
			<include content="List_View_53">
				<param name="id" value="50"/>
				<param name="mainlabel" value="$INFO[ListItem.Title]"/>
				<param name="sublabel" value="$INFO[ListItem.AlbumArtist]$INFO[ListItem.Album, - ]"/>
				<param name="thumblabel" value="$INFO[ListItem.AlbumArtist]"/>
			</include>
		</control>
		<!-- scrollbar -->
		<include>Scrollbar</include>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">50</param>
			<param name="auto_hide">false</param>
			<param name="hide_header">Integer.IsGreaterOrEqual(Container(50).NumItems,9) + [Integer.IsGreaterOrEqual(Container(50).CurrentItem,5) | Container(50).HasPrevious]</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">50</param>
		</include>
	</include>
</includes>
