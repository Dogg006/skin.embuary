	<onload condition="!Skin.HasSetting(TempBuildEmbyNodes)">Skin.ToggleSetting(TempBuildEmbyNodes)</onload>
	<controls>
		<control type="image">
			<width>100%</width>
			<height>100%</height>
			<texture>special://skin/extras/themes/$VAR[SkinTheme]/splash.jpg</texture>
		</control>
	</controls>
</window>
